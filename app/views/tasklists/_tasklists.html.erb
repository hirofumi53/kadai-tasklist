<ul class="media-list">
  <% tasklists.each do |tasklist| %>
    <% user = tasklist.user %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <p>Task : <%= tasklist.content %></p>
        </div>
        <div>
          <p>Status : <%= tasklist.status %></p>
        </div>
        <div>
          <% if current_user == tasklist.user %>
            <%= link_to "Update", edit_tasklist_path(tasklist), class: 'btn btn-info btn-xs' %>
            <%= link_to "Delete", tasklist, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasklists %>
</ul>