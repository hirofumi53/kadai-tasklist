

<%= form_for(tasklist) do |f| %>

<% if tasklist.errors.any? %>
    <div id="error_explanation">
        <ul>
<% tasklist.errors.full_messages.each do |tasklist| %>
            <li><%= tasklist %></li>
            
<% end %>
        </ul>
    </div>

<% end %>

<div class="form-group">
    <div class="col-sm-offset-2 col-lg-offset-3">
    <%= f.label :content, 'タスク' %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>
</div>

  <div class="form-group">
      <div class="col-sm-offset-2 col-lg-offset-3">
    <%= f.label :status, '状況' %>
    <%= f.text_field :status, class: 'form-control' %>
  </div>
  </div>

<%= f.submit '追加' %>

<% end %>

</div>